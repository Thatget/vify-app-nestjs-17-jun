{
  "name": "vify-app-nestjs-17-jun",
  "version": "1.0.0",
  "main": "web/index.js",
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "shopify": "shopify",
    "build": "shopify app build",
    "dev": "shopify app dev",
    "info": "shopify app info",
    "generate": "shopify app generate",
    "deploy": "shopify app deploy",
    "dev:all": "npm-run-all -r -p dev theme:build",
    "client:dev": "npm run --prefix=web/src/client/ dev",
    "client:build": "npm run --prefix=web/frontend/ dev -- --watch --emptyOutDir",
    "theme:build": "npm run --prefix=extensions_builder/request-quote/ build -- --watch",
    "theme:removeHtml": "rm -rf extensions/request-quote/assets/index.html",
    "theme:dev": "npm run --prefix=extensions_builder/request-quote/ dev",
    "theme:deploy": "cd extensions_builder/request-quote && npm run build -- --emptyOutDir && cd .. && rm extensions/request-quote/assets/index.html && shopify app deploy"
  },
  "dependencies": {
    "@material-tailwind/react": "^2.0.6",
    "@shopify/app": "^3.44.1",
    "@shopify/cli": "^3.23.0",
    "@shopify/shopify-api": "^7.5.0",
    "@types/node": "^20.4.5",
    "kill": "^0.0.2",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5"
  },
  "author": "Brucenguyen",
  "private": true,
  "workspaces": [
    "web",
    "web/frontend",
    "extensions/**/*",
    "extensions_builder/request_quote/***/**/*"
  ],
  "devDependencies": {
    "@types/react-material-ui-form-validator": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "eslint": "^8.44.0",
    "eslint-config-standard-with-typescript": "^36.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  },
  "resolutions": {
    "@types/react": "^18.0.8"
  }
}
